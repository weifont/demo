    if ($('#search-input').val().trim().length === 0) return false;
  });

  $('#search-input').on('change keyup paste click', function () {

    if ($(this).val().trim().length > 0) {
      $('#search-advice').show();
    }
    else {
      $('#search-advice').hide();
